<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="css/reset.css" />
    <link rel="stylesheet" href="css/root.css" />
    <link rel="stylesheet" href="css/main.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
    />
    <title>KonfinityPost</title>
  </head>
  <body>
    <% include nav/list %>

    <section id="main-section">
      <div id="sidebar">
        <button
          class="panel-button-large"
          onclick="window.location.href = '/lists/create'"
        >
          Add New List
        </button>
        <a href="/lists" class="current"><i class="fas fa-folder"></i>Lists</a>

        <div class="sidebar-options">
          <p class="subject">List Options</p>
          <button class="option-button">
            <i class="fas fa-search"></i>Search Contacts
          </button>
          <button class="option-button">
            <i class="fas fa-trash"></i>Remove Contacts
          </button>
        </div>
      </div>

      <div id="main-content">
        <h1><i class="fas fa-folder"></i>Lists</h1>
        <div id="pagination-bar">
          <div id="left-bar" class="sub-bar">
            <input type="checkbox" name="" id="" />
            <select name="" id="">
              <option value="">Choose an Action</option>
            </select>
            <button>Go</button>
          </div>
          <div id="right-bar" class="sub-bar">
            <select name="" id="">
              <option value="">10 per page</option>
            </select>
            <p>[Page 1 of 1]</p>
            <p>
              <a> <i class="fas fa-fast-backward"></i></a>
              <a><i class="fas fa-step-backward"></i></a>
              <a>1</a>
              <a> <i class="fas fa-step-forward"></i></a>
              <a><i class="fas fa-fast-forward"></i></a>
            </p>
          </div>
        </div>

        <table class="data-container">
          <% for (list in lists){ %>

          <tr>
            <td class="fixed-width-3">
              <input class="table-ip" type="checkbox" name="" id="" />
            </td>

            <td>
              <p class="subject"><%= lists[list].contacts %></p>
              <p class="smaller">
                total contacts
              </p>
            </td>

            <td class="fixed-width-22">
              <p class="subject"><%= lists[list].name %></p>
              <div class="smaller hover-only">
                <a href="">[view contacts]</a>
                <a href="">[add contacts]</a>
                <a href="/lists/copy?id=<%= lists[list]._id %>">[copy]</a>
                <a href="/lists/edit?id=<%= lists[list]._id %>" class="edit"
                  >[edit]</a
                >
                <a href="/lists/delete?id=<%= lists[list]._id %>" class="delete"
                  >[delete]</a
                >
              </div>
            </td>
            <td>
              <p>Created On</p>
              <p class="smaller">
                <%=lists[list].createdAt.getDate() + '/'+
                lists[list].createdAt.getMonth() + '/'+
                lists[list].createdAt.getFullYear(); %>
              </p>
            </td>
          </tr>

          <% } %>
        </table>
      </div>
    </section>
  </body>
</html>
